[core]
  # Global .gitignore file
  excludesfile = ~/.gitignore_global

[user]
	name = Joel Burget
	email = joel@khanacademy.org

[color]
  status = auto
  branch = auto
  diff = auto
  interactive = auto

[branch]
  # auto-adds the --track flag to git branch. Helps out arc (for Phabricator).
  autosetupmerge = always

[alias]
  graph = log --graph --decorate --oneline --pretty=format:"%h%x20%Cgreen%d%x20%Cred%an%x20%Cblue%ad%x20%Creset%s" --all --full-history --date=short
  ls-ignored = ls-files --exclude-standard --ignored --others
  co = !sh -c 'git checkout $* && git submodule update --init --recursive' --
  p = !sh -c 'git pull $* && git submodule update --init --recursive' --
  st = status
  s  = status --short
  ci = commit
  br = branch
  df = diff
  dfs = diff --staged
  ix = diff --cached # same as dfs
  lp = log -p
  outgoing = log origin/master..HEAD
  incoming = "!git fetch $1; git log HEAD..$1/master"
  lg = log --graph --pretty=format:'%Cred%h%Creset %Creset%Cblue%an%Creset %s %Cgreen(%cr)%Cred%d%Creset' --abbrev-commit --date=relative
  amnd = commit --amend --no-edit
  amnda = commit --amend --no-edit --all
  ff = !sh -c 'git pull $* --ff-only && git submodule update --init --recursive' --
  gprs = "!f() { git pull --rebase && git submodule update --init --recursive; }; f"

  # Ignore whitespace changes
  bw = blame -w
  lg = log --graph --pretty=format:'%Cred%h%Creset %Creset%Cblue%an%Creset %s %Cgreen(%cr)%Cred%d%Creset' --abbrev-commit --date=relative
  shw = show --stat
  tmp = commit -anm tmp

[merge]
  # Always show a diffstat at the end of a merge
  stat = true

[diff]
  # Use mnemonic prefixes (index, work tree, commit, object) instead of the standard a and b notation
  mnemonicprefix = true

  # Detect renames as well as copies
  renames = copies
[push]
	default = simple
[credential]
	helper = osxkeychain
[init]
	templatedir = /Users/joelburget/.git_template
[commit]
	template = /Users/joelburget/.git_template/commit_template
